#!/bin/bash

case $1 in
"calc")
	source ./calculator.sh
	operation=$2
	arg1=$3
	arg2=$4
	calculator "$operation" "$arg1" "$arg2"
;;
"search")
	source ./search.sh
	file=$2
	reg=$3
	search "$file" "$reg"
;;
"reverse")
	source ./reverse.sh
	file1=$2
	file2=$3
	reverse "$file1" "$file2"
;;
"strlen")
	source ./strlen.sh
	str=$2
	strlen "$str"
;;
"log")
	source ./log.sh
	log
;;
"interactive")
	source ./interactive.sh
	interactive
;;
*)
	echo "wrong!"
;;
esac
